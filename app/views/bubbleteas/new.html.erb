<div id="errors">
<% if @bubbletea.errors %>
    <% @bubbletea.errors.full_messages.each do |error| %>
      <li> <%= error %> </li>
    <% end %>
<% end %>
</div> <br>

<div id="everything">
<div id="instructions">
  <h3>Enter your order below.  You can't edit your order (currently) once you submit, so think carefully!</h3>
</div>

<div id="form">
  <%= form_for @bubbletea do |f| %>
    <div id="one">
      <b> <%= f.label :name %> </b>
    </div> <br>
    <%= f.text_field :name %> <br> <br>

    <div id="two">
      <b> <%= f.label :flavour %> </b>
    </div> <br>
    <%= f.text_field :flavour %> <br> <br>

    <div id="three">
      <b><%= f.label :bubbles %> </b>
    </div> <br>
    <%= f.text_field :bubbles %> <br> <br>

    <div id="four">
      <b> <%= f.label :sugar %> </b>
    </div> <br>
    <%= f.text_field :sugar %> <br> <br>

    <div id="five">
      <b> <%= f.label :ice %> </b>
    </div> <br>
    <%= f.text_field :ice %> <br> <br>

    <div id="six">
      <b> <%= f.label :extras %> </b>
    </div> <br>
    <%= f.text_field :extras %> <br>

  </div> <br>

  <div id="submit_button">
    <%= f.submit "Submit Order" %>
  </div>
</div>
<% end %>
