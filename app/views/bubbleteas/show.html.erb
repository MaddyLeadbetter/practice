<%= link_to "Back", articles_path %>
<style media="screen">
  #name {
    padding-left: 10px;
    color: #b2515b;
  }
  #info {
    padding-left: 10px;
    color: #51b2a8;
  }
  #order {
    -moz-border-radius: 15px;
    border-radius: 15px;
    border:solid 3px #b2515b;
    padding:5px;
    background-color: #dcefed;
  }
</style>

<div id="order", style="border:3px solid #b2515b">
  <div id="name">
    <h3>For: <%= @bubbletea.name %></h3>
  </div>
  <div id="info">
  <ul>
    <li><b>Flavour: </b><%= @bubbletea.flavour %></li>
    <li><b>Pearls/Jellies: </b><%= @bubbletea.bubbles %></li>
    <li><b>Sugar Amount: </b><%= @bubbletea.sugar %></li>
    <li><b>Ice Amount: </b><%= @bubbletea.ice %></li>
    <li><b>Extras: </b><%= @bubbletea.extras %></li>
  </ul>

  <%= form_for @bubbletea do |f| %>
    <% f.submit "Delete"%>
  <% end %>
</div>
